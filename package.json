{
  "name": "massa-sc-playground",
  "version": "1.0.0",
  "description": "Assemblyscript playground that allows to compile &amp; play with smart contracts",
  "main": "index.js",
  "scripts": {
    "serve": "serve --no-clipboard",
    "build": "browserify -o dist/linter.js linter.js",
    "watch": "nodemon --exec \"npm run build && npm run serve\""
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/massalabs/massa-sc-playground.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/massalabs/massa-sc-playground/issues"
  },
  "homepage": "https://github.com/massalabs/massa-sc-playground#readme",
  "devDependencies": {
    "browserify": "^17.0.0",
    "nodemon": "^2.0.20",
    "serve": "^14.0.1"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@typescript-eslint/scope-manager": "^5.40.0",
    "@typescript-eslint/typescript-estree": "^5.40.0",
    "assemblyscript": "^0.21.6",
    "browser-typescript-parser": "^2.6.7",
    "eslint": "^8.25.0",
    "eslint-linter-browserify": "^8.25.0",
    "typescript": "^4.8.4"
  }
}
